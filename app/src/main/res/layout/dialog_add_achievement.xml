<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/copper_rose">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:autofillHints="username"
        android:hint="@string/achievement_title_hint"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="#FAFAFA" /> <!-- Set a contrasting text color -->

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:autofillHints="username"
        android:hint="@string/achievement_description_hint"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHint="#FAFAFA" /> <!-- Set a contrasting text color -->

    <EditText
        android:id="@+id/editTextProgress"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:autofillHints="username"
        android:hint="@string/current_progress_hint"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHint="#FAFAFA" /> <!-- Set a contrasting text color -->

    <EditText
        android:id="@+id/editTextTotal"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:autofillHints="username"
        android:hint="@string/total_needed_hint"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHint="#FAFAFA" /> <!-- Set a contrasting text color -->

    <Spinner
        android:id="@+id/spinnerSound"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/save_button_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" /> <!-- Set a contrasting text color -->
</LinearLayout>
